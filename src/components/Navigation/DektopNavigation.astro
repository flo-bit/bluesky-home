---
import type { Item } from "./items";
import NavigationItem from "./NavigationItem.svelte";

let { items, active } = Astro.props;
---

<nav class="mt-8 sm:mt-0 max-w-full">
  <ul
    class="flex flex-wrap px-3 text-sm font-medium text-base-800 dark:text-base-200"
  >
    {
      items.map((item: Item) => (
        <NavigationItem
          href={`/${item === "about" ? "" : item}`}
          isActive={active == item}
        >
          {item}
        </NavigationItem>
      ))
    }
  </ul>
</nav>
